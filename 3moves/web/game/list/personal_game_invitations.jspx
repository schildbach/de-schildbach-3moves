<jsp:root version="2.0"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt"
>
	<c:set var="page_content" scope="request">
		
		<fmt:bundle basename="game_list" prefix="personal_game_invitations.">
	
			<h3><fmt:message key="header"/></h3>
			
			<c:choose>
				<c:when test="${!empty games}">
					<table cellspacing="0" class="list small">
						<c:import url="games_list.dof?columns=id,rules-clock-rating,players,rating,clock,ready_at,start_at&amp;row_class=light_dark"/>
					</table>
				</c:when>
				<c:otherwise>
					<p><em><fmt:message key="empty"/></em></p>
				</c:otherwise>
			</c:choose>
		
		</fmt:bundle>
	
	</c:set>
	
	<c:import url="/layout/standard.dof"/>

</jsp:root>
